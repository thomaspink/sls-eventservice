{% extends 'layouts/base.twig' %}

{% block content %}

  <div class="container">

    <grid-row gutter="medium">
        <grid-column medium-6>
          <h2 class="jumbo">Ihr Event - <br>unsere Aufgabe</h2>
          <p class="excerpt">It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it ha</p>
        </grid-column>
    </grid-row>

    {% for post in posts %}

    <grid-row class="reference-item">

      <grid-column medium-6>
        {% include 'components/image.twig'
           with {
            'image': Image(post.image),
            'style': 'reference-item__image'
          }
        %}
      </grid-column>

      <grid-column medium-6 class="reference-item__content">
        {% include 'components/image.twig' with { 'image': Image(post.logo), 'style': 'reference-item__logo'  } %}

        <h3 class="reference-item__headline">{{ post.title }}</h3>
        <p class="refernce-item__text">{{ post.shorttext }}</p>
        <a class="reference-item__link" href="{{ post.link }}">{{ __('Mehr erfahren', 'sls-2017') }} ></a>

      </grid-column>

    </grid-row>

    {% endfor %}


  </div>

{% endblock %}
