{
  "name": "sls-eventservice",
  "version": "0.0.1",
  "description": "Website for SLS Eventservice",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run tools:build && php composer.phar install",
    "setup": "npm run wp:install && npm run wp:plugins && npm run wp:config",
    "build": "mkdir -p dist && npm run wp:theme:prod && npm run compile:prod",
    "start": "npm run wp:theme:dev && node webpack.middleware.js & npm run server:start",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:tools": "node_modules/tslint/bin/tslint -c ./tslint.json 'src/tools/**/*.ts'",
    "lint:styles": "node_modules/stylelint/bin/stylelint.js src/client/**/*.scss --config .stylelintrc.json --syntax scss",
    "tools:build": "tsc -p src/tools/tsconfig.json",
    "wp:install": "./scripts/wp-install.sh",
    "wp:theme:dev": "./scripts/wp-theme.sh --dev",
    "wp:theme:prod": "./scripts/wp-theme.sh",
    "wp:config": "node dist/.tools/wp-config.js --template=public/wp-config-sample.php --out=public --generate-keys",
    "wp:plugins": "node dist/.tools/wp-plugins.js --out=public/wp-content/plugins",
    "compile:prod": "webpack --progress --profile --bail --config config/webpack.prod.js",
    "server:start": "php -S localhost:8080 -t public/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomaspink/sls-eventservice.git"
  },
  "author": "Thomas Pink",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thomaspink/sls-eventservice/issues"
  },
  "homepage": "https://github.com/thomaspink/sls-eventservice#readme",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/inquirer": "0.0.35",
    "@types/minimist": "^1.2.0",
    "@types/request": "^2.0.3",
    "@types/rimraf": "0.0.28",
    "adm-zip": "^0.4.7",
    "awesome-typescript-loader": "^3.0.4",
    "chalk": "^2.0.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.2",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "google-closure-compiler-js": "^20170910.0.0",
    "html-webpack-exclude-assets-plugin": "0.0.4",
    "html-webpack-plugin": "^2.28.0",
    "inquirer": "^3.2.1",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "raw-loader": "^0.5.1",
    "request": "^2.82.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.2",
    "script-ext-html-webpack-plugin": "^1.7.1",
    "style-ext-html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.13.2",
    "stylelint": "^7.8.0",
    "tslint": "^4.4.2",
    "typescript": "2.5.0",
    "webpack": "3.6.0",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-merge": "^2.6.1"
  },
  "dependencies": {
    "@types/compression": "0.0.33",
    "@types/express": "^4.0.35",
    "@types/helmet": "0.0.33",
    "@types/node": "^7.0.5",
    "@types/nunjucks": "0.0.32",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "helmet": "^3.4.0",
    "lazysizes": "^4.0.0-rc3",
    "nunjucks": "^3.0.0",
    "rxjs": "^5.4.3",
    "swiper": "^3.4.2"
  },
  "wp-plugins": {
    "advanced-custom-fields-pro": "https://github.com/wp-premium/advanced-custom-fields-pro/archive/5.6.2.zip",
    "acf-image-crop-add-on": "https://downloads.wordpress.org/plugin/acf-image-crop-add-on.1.4.12.zip"
  }
}
