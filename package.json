{
  "name": "sls-eventservice",
  "version": "0.0.1",
  "description": "Website for SLS Eventservice",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "struct": "mkdir dist && mkdir dist/views && mkdir dist/public",
    "start": "npm run prebuild && npm run server:views:dev && npm run client:compile -- --config config/webpack.dev.js && npm run server:start",
    "build": "npm run prebuild && npm run server:views:prod && npm run client:compile -- --config config/webpack.prod.js",
    "prebuild": "npm run clean && npm run struct && npm run server:compile",
    "server:start": "NODE_ENV=development node_modules/.bin/nodemon --debug dist/app.js",
    "server:compile": "node_modules/typescript/bin/tsc -p src/server/tsconfig.json",
    "server:compile:watch": "npm run server:compile -- -w",
    "server:assets": "cp -R src/server/public dist",
    "server:views:dev": "mkdir dist/views/layouts && ln -s `pwd`/src/server/views/components/ `pwd`/dist/views/components && ln -s `pwd`/src/server/views/routes/ `pwd`/dist/views/routes",
    "server:views:prod": "cp -R src/server/views dist && rm -rf dist/views/layouts && mkdir dist/views/layouts",
    "client:compile": "node_modules/webpack/bin/webpack.js --progress --profile --bail",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "node_modules/tslint/bin/tslint -c ./tslint.json 'src/**/*.ts'",
    "lint:styles": "node_modules/stylelint/bin/stylelint.js src/client/**/*.scss --config .stylelintrc.json --syntax scss",
    "postinstall": "npm run tools:build && npm run wp:install && npm run wp:theme:dev && npm run wp:config",
    "tools:build": "tsc -p src/tools/tsconfig.json",
    "wp:install": "./scripts/wp-install.sh",
    "wp:theme:dev": "./scripts/wp-theme.sh --dev",
    "wp:theme:prod": "./scripts/wp-theme.sh",
    "wp:config": "node .tools/config.js --template=public/wp-config-sample.php --out=public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomaspink/sls-eventservice.git"
  },
  "author": "Thomas Pink",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thomaspink/sls-eventservice/issues"
  },
  "homepage": "https://github.com/thomaspink/sls-eventservice#readme",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/inquirer": "0.0.35",
    "@types/minimist": "^1.2.0",
    "@types/rimraf": "0.0.28",
    "awesome-typescript-loader": "^3.0.4",
    "chalk": "^2.0.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.2",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "html-webpack-exclude-assets-plugin": "0.0.4",
    "html-webpack-plugin": "^2.28.0",
    "inquirer": "^3.2.1",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.2",
    "script-ext-html-webpack-plugin": "^1.7.1",
    "style-ext-html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.13.2",
    "stylelint": "^7.8.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.0",
    "webpack-merge": "^2.6.1"
  },
  "dependencies": {
    "@types/compression": "0.0.33",
    "@types/express": "^4.0.35",
    "@types/helmet": "0.0.33",
    "@types/node": "^7.0.5",
    "@types/nunjucks": "0.0.32",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "nunjucks": "^3.0.0",
    "swiper": "^3.4.2"
  }
}
