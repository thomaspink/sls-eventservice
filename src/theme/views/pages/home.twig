  {% endif %}

  <div class="container">

    {% if page %}
      <grid-row class="island-3">
        <grid-column medium-8>
          {{ page.content }}
        </grid-column>
      </grid-row>
    {% endif %}

  </div>

  <quotes-swiper>
  {% include 'components/swiper.twig' with { 'slides': swiper, 'pagination': true } %}
  </quotes-swiper>

  {% include 'components/logo-bar.twig' %}

  <div class="container">

    {% include 'components/categorylist.twig' with { 'showcase': true } %}

    <h2 class="is-centered" >SLS â€“ Blog</h2>
    {% include 'components/post-overview.twig' with { 'posts': posts } %}

