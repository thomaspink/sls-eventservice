  {% include "../components/hero.njk" %}
  <div class="container">
    <form action="" class="contact-form">
      <grid-row>
          <grid-column medium-6>
            <input type="text" placeholder="Vorname Nachname" required>
          </grid-column>
          <grid-column medium-6>
