{% extends 'layouts/base.twig' %}

{% block content %}

{% if hero.image %}
  {% include 'components/hero.twig' with { 'hero': hero } only %}
{% endif %}

  <div class="container">
    <grid-row gutter="medium">
        <grid-column medium-6>
          <h2 class="jumbo">{{ page.claim }}</h2>
          <p class="excerpt">
            {{ page.shorttext }}
          </p>

          <a href="references/" class="is--uppercase island-2">< {{ __('ZurÃ¼ck', 'sls-2017') }}</a>
        </grid-column>

        <grid-column medium-6>

          {% include 'components/image.twig' with { 'image': Image(page.logo), 'style': 'refernce-logo' } %}
        </grid-column>
    </grid-row>


    <grid-row gutter="medium" class="island-3">

        <grid-column medium-12>

          {% set layout = page.get_field('gallery') %}
          {% if layout %}
            {% include 'components/layout.twig' with { 'layout': layout } %}
          {% endif %}

          {{ page.content }}
        </grid-column>

    </grid-row>


    <grid-row>
      <grid-column medium-12>
        <h3 class="is--uppercase is--bold">{{ __('Weitere Referenzen', 'sls-2017') }}</h3>
      </grid-column>

      {% for reference in references %}
      <grid-column medium-3>
        {% include 'components/image.twig' with { 'image': Image(reference.logo) } only %}
      </grid-column>
      {% endfor %}

    </grid-row>


    {% if gallery %}
      {% include 'components/gallery.twig' with { 'galleries': gallery } only %}
    {% endif %}
  </div>

{% endblock %}
