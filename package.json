{
  "name": "sls-eventservice",
  "version": "0.0.1",
  "description": "Website for SLS Eventservice",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "npm run clean && npm run server:structure && npm run server:views && npm run server:assets && npm run server:compile:watch & npm run server:start",
    "build": "npm run clean && npm run lint && npm run server:compile && npm run server:views && npm run server:assets",
    "server:start": "node_modules/nodemon/bin/nodemon.js dist/app.js --config ./config/nodemon.json",
    "server:structure": "mkdir dist && mkdir dist/views && mkdir dist/public",
    "server:compile": "node_modules/typescript/bin/tsc -p ./server/tsconfig.json",
    "server:compile:watch": "node_modules/typescript/bin/tsc -p ./server/tsconfig.json -w",
    "server:assets": "cp -R server/public dist",
    "server:views": "cp -R server/views dist",
    "lint": "npm run lint:ts",
    "lint:ts": "node_modules/tslint/bin/tslint -c ./tslint.json 'server/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomaspink/sls-eventservice.git"
  },
  "author": "Thomas Pink",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thomaspink/sls-eventservice/issues"
  },
  "homepage": "https://github.com/thomaspink/sls-eventservice#readme",
  "devDependencies": {
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6"
  },
  "dependencies": {
    "@types/compression": "0.0.33",
    "@types/express": "^4.0.35",
    "@types/helmet": "0.0.33",
    "@types/node": "^7.0.5",
    "@types/nunjucks": "0.0.32",
    "compression": "^1.6.2",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "nunjucks": "^3.0.0"
  }
}
